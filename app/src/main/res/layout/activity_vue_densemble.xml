<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.christophe.taxe.activites.VueDensembleActivity">

    <Button
        android:id="@+id/journalier"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="63dp"
        android:text="Journalier" />

    <Button
        android:id="@+id/mensuel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/journalier"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:text="Mensuel" />

    <Button
        android:id="@+id/annuel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/journalier"
        android:layout_alignStart="@+id/journalier"
        android:layout_below="@+id/journalier"
        android:layout_marginTop="81dp"
        android:text="Annuel" />

    <Button
        android:id="@+id/patente"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/annuel"
        android:layout_alignLeft="@+id/mensuel"
        android:layout_alignStart="@+id/mensuel"
        android:text="Patentes" />
</RelativeLayout>
